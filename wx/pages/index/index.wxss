.page {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
  background: #000000;
  color: #ffffff;
  font-family: "PingFang SC", "Microsoft YaHei", "SFMono-Regular", "Menlo", monospace;
  letter-spacing: 0.5rpx;
  box-sizing: border-box;
}

.bg {
  position: absolute;
  inset: 0;
  background-size: cover;
  background-position: center;
  opacity: 0.4;
  z-index: 0;
}

.bg-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0.5), transparent 45%, rgba(0, 0, 0, 0.9));
  z-index: 1;
}

.scene {
  position: relative;
  z-index: 2;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  min-height: 0;
  flex: 1 1 auto;
}

.fade-in {
  animation: fadeIn 0.3s ease-out;
}

.start {
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 48rpx 24rpx;
}

.title {
  font-size: 64rpx;
  margin-bottom: 16rpx;
  letter-spacing: 6rpx;
  text-transform: uppercase;
}

.subtitle {
  font-size: 32rpx;
  font-weight: 800;
  text-transform: uppercase;
  background: linear-gradient(180deg, #fde047, #a16207);
  color: transparent;
  -webkit-background-clip: text;
  margin-bottom: 72rpx;
  text-shadow: 2px 2px 0 #000000;
}

.pixel-zh-title {
  font-weight: 900;
  color: #facc15;
  text-shadow: 2px 2px 0px #a16207, 4px 4px 0px #000000;
  letter-spacing: 0.1em;
}

.start-btn {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 24rpx 48rpx;
  background: #22c55e;
  color: #000000;
  font-weight: 800;
  font-size: 32rpx;
  border: 4rpx solid #000000;
  box-shadow: 8rpx 8rpx 0 #000000;
  text-transform: uppercase;
}

.start-btn:active {
  transform: translateY(2rpx);
  box-shadow: 6rpx 6rpx 0 #000000;
}

.select {
  padding: 24rpx 20rpx 20rpx;
  box-sizing: border-box;
  min-height: 0;
}

.select-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: rgba(0, 0, 0, 0.6);
  padding: 20rpx 24rpx;
  border-radius: 20rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(12px);
  margin-bottom: 24rpx;
}

.back-btn {
  color: #94a3b8;
  font-weight: 700;
  font-size: 24rpx;
}

.select-title {
  font-weight: 800;
  font-size: 32rpx;
  color: #facc15;
}

.header-spacer {
  width: 80rpx;
}

.select-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  overflow: hidden;
  min-height: 0;
}

.select-card {
  flex: 1;
  border-radius: 28rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(6px);
  background: rgba(255, 255, 255, 0.04);
}

.select-card.red {
  border-color: rgba(239, 68, 68, 0.3);
  background: rgba(239, 68, 68, 0.1);
}

.select-card.blue {
  border-color: rgba(59, 130, 246, 0.3);
  background: rgba(59, 130, 246, 0.1);
}

.card-title {
  font-weight: 900;
  font-size: 32rpx;
  text-align: center;
  text-transform: uppercase;
}

.card-title.red {
  color: #f87171;
}

.card-title.blue {
  color: #60a5fa;
}

.card-list {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  overflow-y: auto;
  padding-right: 6rpx;
  min-height: 0;
}

.card-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 18rpx;
  border-radius: 20rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.05);
  background: rgba(255, 255, 255, 0.05);
}

.card-item.active.red {
  border-color: #ef4444;
  background: rgba(239, 68, 68, 0.3);
}

.card-item.active.blue {
  border-color: #3b82f6;
  background: rgba(59, 130, 246, 0.3);
}

.item-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 12rpx;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.item-info {
  flex: 1;
  min-width: 0;
}

.item-name {
  font-weight: 800;
  font-size: 24rpx;
  display: block;
  text-transform: uppercase;
}

.item-desc {
  margin-top: 6rpx;
  font-size: 20rpx;
  opacity: 0.75;
  display: block;
}

.item-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
}

.item-dot.red {
  background: #ef4444;
}

.item-dot.blue {
  background: #3b82f6;
}

.versus {
  align-items: center;
  justify-content: center;
  display: flex;
}

.versus-icon {
  font-size: 48rpx;
  color: #475569;
}

.locked {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  opacity: 0.3;
}

.locked-icon {
  font-size: 48rpx;
}

.locked-text {
  margin-top: 8rpx;
  font-size: 20rpx;
  font-weight: 800;
  text-transform: uppercase;
}

.select-footer {
  padding: 24rpx 0 16rpx;
  display: flex;
  justify-content: center;
}

.enter-btn {
  width: 100%;
  padding: 24rpx 32rpx;
  background: #facc15;
  color: #000000;
  font-weight: 800;
  font-size: 28rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.4);
  border: 4rpx solid #000000;
  text-transform: uppercase;
}

.enter-btn:active {
  transform: translateY(2rpx);
}

.enter-btn[disabled] {
  opacity: 0.5;
}

.battle {
  padding: 24rpx 20rpx 20rpx;
  gap: 20rpx;
  box-sizing: border-box;
  min-height: 0;
}

.battle-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: rgba(0, 0, 0, 0.6);
  padding: 20rpx 24rpx;
  border-radius: 24rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(12px);
}

.battle-side {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex: 1;
}

.battle-side.reverse {
  justify-content: flex-end;
}

.battle-meta {
  min-width: 0;
}

.battle-meta.align-right {
  text-align: right;
}

.battle-name {
  font-weight: 800;
  font-size: 24rpx;
  display: block;
  text-transform: uppercase;
}

.text-red {
  color: #f87171;
}

.text-blue {
  color: #60a5fa;
}

.text-green {
  color: #4ade80;
}

.text-dim {
  color: #64748b;
}

.hp-bar {
  width: 160rpx;
  height: 16rpx;
  border-radius: 999rpx;
  margin-top: 8rpx;
  overflow: hidden;
  border: 2rpx solid rgba(255, 255, 255, 0.1);
}

.hp-bar.red {
  background: rgba(127, 29, 29, 0.4);
}

.hp-bar.green {
  background: rgba(20, 83, 45, 0.4);
}

.hp-fill {
  height: 100%;
  background: #22c55e;
  box-shadow: 0 0 12rpx rgba(34, 197, 94, 0.6);
}

.avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
}

.avatar-win {
  background: rgba(34, 197, 94, 0.3);
  animation: winnerPulse 2s infinite;
}

.avatar-dim {
  opacity: 0.7;
}

.battle-vs {
  color: #facc15;
  font-weight: 900;
  font-size: 32rpx;
  opacity: 0.4;
  padding: 0 12rpx;
}

.chat {
  flex: 1;
  width: 100%;
  max-height: 100%;
  padding: 16rpx 12rpx;
  min-height: 0;
}

.bubble-row {
  display: flex;
  margin-bottom: 24rpx;
}

.bubble-row.left {
  justify-content: flex-start;
}

.bubble-row.right {
  justify-content: flex-end;
}

.bubble {
  max-width: 80%;
  padding: 20rpx;
  border-radius: 24rpx;
  box-shadow: 0 16rpx 32rpx rgba(0, 0, 0, 0.4);
  border: 4rpx solid transparent;
}

.bubble.boss {
  background: #ffffff;
  color: #000000;
  border-top-left-radius: 0;
}

.bubble.emp {
  background: #2563eb;
  color: #ffffff;
  border-top-right-radius: 0;
  border-color: #60a5fa;
}

.bubble.win {
  background: #dcfce7;
  color: #14532d;
  border-top-left-radius: 0;
  border-color: #22c55e;
}

.bubble-title {
  font-size: 18rpx;
  font-weight: 900;
  display: block;
  margin-bottom: 8rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.15);
  padding-bottom: 6rpx;
  text-transform: uppercase;
}

.bubble-text {
  font-size: 24rpx;
  font-weight: 800;
}

.italic {
  font-style: italic;
}

.text-muted {
  opacity: 0.7;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.file-card {
  display: flex;
  align-items: center;
  gap: 12rpx;
  background: rgba(255, 255, 255, 0.1);
  padding: 12rpx;
  border-radius: 16rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
}

.file-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 10rpx;
  background: rgba(255, 255, 255, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.file-info {
  min-width: 0;
}

.file-title {
  font-weight: 900;
  font-size: 20rpx;
  display: block;
}

.file-desc {
  font-size: 18rpx;
  opacity: 0.6;
  font-family: monospace;
}

.victory {
  display: flex;
  justify-content: center;
  padding: 24rpx 0;
}

.victory-card {
  width: 100%;
  max-width: 520rpx;
  background: rgba(15, 23, 42, 0.9);
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  padding: 32rpx;
  border-radius: 28rpx;
  text-align: center;
  backdrop-filter: blur(10px);
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.victory-icon {
  font-size: 48rpx;
}

.victory-title {
  font-size: 32rpx;
  text-transform: uppercase;
}

.victory-desc {
  font-size: 20rpx;
  color: #94a3b8;
}

.victory-btn {
  width: 100%;
  background: #16a34a;
  color: #ffffff;
  padding: 20rpx;
  border-radius: 20rpx;
  font-weight: 900;
  font-size: 22rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  border: 4rpx solid #000000;
  box-shadow: 6rpx 6rpx 0 #000000;
}

.victory-btn:active {
  transform: translateY(2rpx);
  box-shadow: 4rpx 4rpx 0 #000000;
}

.victory-link {
  color: #94a3b8;
  text-decoration: underline;
  font-size: 18rpx;
}

.bottom-bar {
  width: 100%;
  background: rgba(15, 23, 42, 0.9);
  border-radius: 28rpx;
  border: 4rpx solid #334155;
  padding: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.4);
  box-sizing: border-box;
}

.cast-btn {
  width: 100%;
  padding: 20rpx;
  border-radius: 20rpx;
  font-weight: 900;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  border-bottom: 6rpx solid transparent;
  text-transform: uppercase;
}

.cast-active {
  background: #2563eb;
  border-bottom-color: #1e40af;
  color: #ffffff;
  box-shadow: 6rpx 6rpx 0 rgba(0, 0, 0, 0.6);
}

.cast-disabled {
  background: #1f2937;
  border-bottom-color: #0f172a;
  color: #64748b;
  opacity: 0.5;
}

.overlay {
  position: absolute;
  inset: 0;
  z-index: 50;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.7);
  backdrop-filter: blur(8px);
  padding: 24rpx;
}

.modal {
  width: 100%;
  max-width: 640rpx;
  border-radius: 28rpx;
  overflow: hidden;
  border: 4rpx solid;
  background: #0f172a;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 20rpx;
  border-bottom: 2rpx solid;
}

.modal-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-weight: 900;
  font-size: 22rpx;
}

.brand-icon {
  font-size: 20rpx;
}

.window-dots {
  display: flex;
  gap: 8rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
}

.dot.red {
  background: rgba(239, 68, 68, 0.7);
}

.dot.green {
  background: rgba(34, 197, 94, 0.7);
}

.modal-body {
  padding: 24rpx;
  min-height: 520rpx;
  display: flex;
  flex-direction: column;
}

.modal-top {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  padding-bottom: 16rpx;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  margin-bottom: 20rpx;
}

.modal-meta {
  min-width: 0;
  padding-right: 12rpx;
}

.modal-label {
  font-size: 18rpx;
  text-transform: uppercase;
  color: #64748b;
}

.modal-title-text {
  font-size: 28rpx;
  font-weight: 900;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.modal-step {
  font-family: monospace;
  font-size: 22rpx;
  color: #475569;
  background: #0b1220;
  padding: 8rpx 12rpx;
  border-radius: 12rpx;
}

.modal-content {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cast-text {
  width: 100%;
  padding: 20rpx;
  border-radius: 16rpx;
  background: rgba(255, 255, 255, 0.05);
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  font-size: 22rpx;
  text-align: left;
}

.modal-footer {
  border-top: 1px solid rgba(255, 255, 255, 0.05);
  padding-top: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cast-progress {
  width: 100%;
  text-align: center;
}

.cast-step {
  font-size: 22rpx;
  font-weight: 900;
  color: #ffffff;
  display: block;
  margin-bottom: 16rpx;
}

.cast-dots {
  display: flex;
  justify-content: center;
  gap: 8rpx;
}

.cast-dot {
  height: 8rpx;
  border-radius: 999rpx;
  transition: width 0.3s ease;
}

.cast-dot-on {
  width: 32rpx;
}

.cast-dot-off {
  width: 12rpx;
  background: rgba(255, 255, 255, 0.1);
}

.fire-btn {
  width: 100%;
  padding: 20rpx;
  border-radius: 18rpx;
  font-weight: 900;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  color: #ffffff;
  border: 4rpx solid #000000;
  box-shadow: 6rpx 6rpx 0 #000000;
}

.fire-btn:active {
  transform: translateY(2rpx);
  box-shadow: 4rpx 4rpx 0 #000000;
}

.btn-icon {
  font-size: 24rpx;
}

.shake-crazy {
  animation: shakeCrazy 0.5s cubic-bezier(.36,.07,.19,.97) both infinite;
  border-color: #ef4444;
}

.bounce {
  animation: bounce 1s infinite;
  color: #facc15;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes shakeCrazy {
  0% { transform: translate(1px, 1px) rotate(0deg); }
  10% { transform: translate(-1px, -2px) rotate(-1deg); }
  20% { transform: translate(-3px, 0px) rotate(1deg); }
  30% { transform: translate(3px, 2px) rotate(0deg); }
  40% { transform: translate(1px, -1px) rotate(1deg); }
  50% { transform: translate(-1px, 2px) rotate(-1deg); }
  60% { transform: translate(-3px, 1px) rotate(0deg); }
  70% { transform: translate(3px, 1px) rotate(-1deg); }
  80% { transform: translate(-1px, -1px) rotate(1deg); }
  90% { transform: translate(1px, 2px) rotate(0deg); }
  100% { transform: translate(1px, -2px) rotate(-1deg); }
}

@keyframes winnerPulse {
  0% { box-shadow: 0 0 0 0 rgba(34, 197, 94, 0.6); }
  70% { box-shadow: 0 0 0 20rpx rgba(34, 197, 94, 0); }
  100% { box-shadow: 0 0 0 0 rgba(34, 197, 94, 0); }
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-8rpx); }
}

scroll-view::-webkit-scrollbar {
  width: 0;
  height: 0;
}
